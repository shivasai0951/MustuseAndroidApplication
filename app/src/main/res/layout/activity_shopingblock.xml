<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm2"
    tools:context=".shopingblock">


    <Button android:id="@+id/btn19"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:onClick="amazon"
        android:background="@drawable/amazon"
        android:layout_marginStart="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_alignParentLeft="true" />


    <Button android:id="@+id/btn20"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:onClick="flipkart"
        android:background="@drawable/flipkart"
        android:layout_marginEnd="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btn21"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/btn12"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/paytm"
        android:onClick="paytm" />
</RelativeLayout>
